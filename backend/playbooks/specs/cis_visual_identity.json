{
  "version": "1.0",
  "playbook_code": "cis_visual_identity",
  "kind": "user_workflow",
  "description": "建立品牌視覺系統，包括 Logo、色彩、字體、版式、應用模板",
  "steps": [
    {
      "id": "define_color_palette",
      "tool": "core_llm.structured_extract",
      "inputs": {
        "text": "{{input.brand_context}}",
        "schema_description": "定義品牌色彩系統"
      },
      "outputs": {
        "color_palette": "extracted_data"
      }
    },
    {
      "id": "define_typography",
      "tool": "core_llm.generate",
      "inputs": {
        "prompt": "定義品牌字體系統"
      },
      "outputs": {
        "typography": "generated_system"
      },
      "depends_on": ["define_color_palette"]
    },
    {
      "id": "create_layout_templates",
      "tool": "core_llm.generate",
      "inputs": {
        "prompt": "基於色彩和字體系統，生成版式模板"
      },
      "outputs": {
        "layout_templates": "generated_templates"
      },
      "depends_on": ["define_typography"]
    }
  ],
  "inputs": {
    "brand_context": {
      "type": "string",
      "description": "品牌上下文資訊",
      "required": true
    },
    "workspace_id": {
      "type": "string",
      "description": "Workspace ID",
      "required": true
    }
  },
  "outputs": {
    "color_palette": {
      "type": "object",
      "description": "色彩系統",
      "source": "step.define_color_palette.color_palette"
    },
    "typography": {
      "type": "object",
      "description": "字體系統",
      "source": "step.define_typography.typography"
    },
    "layout_templates": {
      "type": "array",
      "description": "版式模板",
      "source": "step.create_layout_templates.layout_templates"
    }
  }
}


