{
  "version": "1.0",
  "playbook_code": "cis_decision_workshop",
  "kind": "user_workflow",
  "description": "引導品牌方完成關鍵決策卡簽核",
  "steps": [
    {
      "id": "prepare_decision_cards",
      "tool": "cloud_capability.call",
      "inputs": {
        "capability": "brand_identity",
        "endpoint": "cis-mapper/prepare-decision-cards",
        "params": {
          "workspace_id": "{{input.workspace_id}}",
          "brand_context": "{{input.brand_context}}"
        }
      },
      "outputs": {
        "decision_cards": "prepared_cards"
      }
    },
    {
      "id": "facilitate_workshop",
      "tool": "core_llm.generate",
      "inputs": {
        "prompt": "引導品牌方完成決策卡簽核流程"
      },
      "outputs": {
        "workshop_results": "generated_results"
      },
      "depends_on": ["prepare_decision_cards"]
    }
  ],
  "inputs": {
    "brand_context": {
      "type": "string",
      "description": "品牌上下文資訊",
      "required": true
    },
    "workspace_id": {
      "type": "string",
      "description": "Workspace ID",
      "required": true
    }
  },
  "outputs": {
    "decision_cards": {
      "type": "array",
      "description": "準備的決策卡",
      "source": "step.prepare_decision_cards.decision_cards"
    },
    "workshop_results": {
      "type": "object",
      "description": "工作坊結果",
      "source": "step.facilitate_workshop.workshop_results"
    }
  }
}


