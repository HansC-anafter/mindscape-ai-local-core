# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF (fixes Windows CRLF issue)
*.sh text eol=lf
*.bash text eol=lf

# Docker files should use LF
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose.yml text eol=lf
docker-compose.*.yml text eol=lf

# Python files
*.py text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Markdown files
*.md text eol=lf

# Text files
*.txt text eol=lf
*.log text eol=lf

# Source files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf

# Keep Windows batch files as CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.db binary
*.sqlite binary
*.so binary
*.dll binary
*.exe binary

