# Mindscape AI Local Core - Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# LLM Provider Configuration (Required for AI features)
# =============================================================================
# At least one API key is recommended for AI features to work.
# You can start the system without these, but some features will be unavailable.

# OpenAI API Key (optional but recommended)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (optional but recommended)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL configuration for vector storage (optional)
POSTGRES_DB=mindscape_vectors
POSTGRES_USER=mindscape
POSTGRES_PASSWORD=mindscape_password

# =============================================================================
# Server Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Timezone (optional, defaults to UTC)
# Examples: Asia/Shanghai, America/New_York, Europe/London
TZ=UTC

# =============================================================================
# Sandbox Preview Configuration (optional)
# =============================================================================
# Port range for sandbox preview servers
SANDBOX_PREVIEW_PORT_START=3002
SANDBOX_PREVIEW_PORT_END=3020

# =============================================================================
# Security Configuration
# =============================================================================
# Local authentication secret (change in production!)
LOCAL_AUTH_SECRET=dev-secret-key-change-in-production

# =============================================================================
# Feature Flags
# =============================================================================
# Enable LLM-based intent extractor
ENABLE_LLM_INTENT_EXTRACTOR=true

# Disable legacy playbook fallback (D2: Legacy Cleanup)
PLAYBOOK_DISABLE_LEGACY=1

# =============================================================================
# Cloud Extension (Optional)
# =============================================================================
# Uncomment and configure if you want to connect to Mindscape AI Cloud
# CLOUD_API_URL=http://host.docker.internal:8002
# CLOUD_LICENSE_KEY=

# =============================================================================
# OCR Service Configuration (optional)
# =============================================================================
# Enable GPU for OCR (requires GPU support in Docker)
OCR_USE_GPU=false
# OCR language: ch (Chinese), en (English), etc.
OCR_LANG=ch
