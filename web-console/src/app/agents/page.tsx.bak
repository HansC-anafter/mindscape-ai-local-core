'use client';

import React, { useState, useEffect } from 'react';
import Link from 'next/link';
import Header from '../../components/Header';
import { t } from '../../lib/i18n';
import { WORK_SCENES, WorkScene, getWorkSceneById } from '../../lib/work-scenes';

const API_URL = process.env.NEXT_PUBLIC_API_URL || 'http://localhost:8000';

export default function AgentsPage() {
  const [selectedScene, setSelectedScene] = useState<string | null>(null);
  const [task, setTask] = useState('');
  const [agentType, setAgentType] = useState('planner');
  const [useMindscape, setUseMindscape] = useState(true);
  const [loading, setLoading] = useState(false);
  const [result, setResult] = useState<any>(null);
  const [error, setError] = useState<string | null>(null);
  const [suggestedPlaybooks, setSuggestedPlaybooks] = useState<string[]>([]);
  const [backendAvailable, setBackendAvailable] = useState<boolean | null>(null);
  const [configError, setConfigError] = useState<string | null>(null);
  
  // New states for role card and run all
  const [suggestedScene, setSuggestedScene] = useState<any>(null);
  const [drawingCard, setDrawingCard] = useState(false);
  const [runningAll, setRunningAll] = useState(false);
  const [allAgentsResults, setAllAgentsResults] = useState<any[]>([]);

  // Handle scene selection
  const handleSceneSelect = (scene: WorkScene) => {
    setSelectedScene(scene.id);
    setAgentType(scene.defaultAgentType);
    setTask(scene.defaultPromptTemplate);
  };

  // Check backend availability on mount
  useEffect(() => {
    const checkBackendAvailability = async () => {
      try {
        const apiUrl = API_URL.startsWith('http') ? API_URL : '';
        const response = await fetch(`${apiUrl}/api/v1/config/backend?profile_id=default-user`, {
          headers: { 'Content-Type': 'application/json' },
        });
        if (response.ok) {
          const config = await response.json();
          const currentBackend = config.available_backends?.[config.current_mode];
          setBackendAvailable(currentBackend?.available || false);
          if (!currentBackend?.available) {
            setConfigError(t('apiKeyNotConfigured'));
          }
        }
      } catch (err) {
        setBackendAvailable(false);
        setConfigError('Unable to check backend configuration status.');
      }
    };
    checkBackendAvailability();
  }, []);

  // Load suggested playbooks (simple tag-based matching for v0)
  useEffect(() => {
    const loadSuggestedPlaybooks = async () => {
      try {
        const apiUrl = API_URL.startsWith('http') ? API_URL : '';
        const response = await fetch(`${apiUrl}/api/v1/playbooks`, {
          headers: { 'Content-Type': 'application/json' },
        });
        if (response.ok) {
          const playbooks = await response.json();
          // Simple suggestion: show first 3 playbooks (v0 MVP)
          setSuggestedPlaybooks(playbooks.slice(0, 3).map((p: any) => p.metadata.playbook_code));
        }
      } catch (err) {
        // Ignore errors for suggestions
      }
    };
    loadSuggestedPlaybooks();
  }, []);

  const handleRunAgent = async (e: React.FormEvent) => {
    e.preventDefault();
    setLoading(true);
    setError(null);
    setResult(null);

    try {
      const profileId = 'default-user';
      const apiUrl = API_URL.startsWith('http') ? API_URL : '';

      const response = await fetch(`${apiUrl}/api/v1/agent/run?profile_id=${profileId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          task,
          agent_type: agentType,
          use_mindscape: useMindscape,
          intent_ids: [],
        }),
      });

      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.detail || 'Failed to run agent');
      }

      const data = await response.json();
      setResult(data);
    } catch (err: any) {
      let errorMessage = err.message || 'Failed to run agent';
      // Convert technical errors to user-friendly messages
      if (errorMessage.includes('No LLM providers configured') ||
          errorMessage.includes('OPENAI_API_KEY') ||
          errorMessage.includes('ANTHROPIC_API_KEY')) {
        errorMessage = t('apiKeyNotConfigured');
      }
      setError(errorMessage);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="min-h-screen bg-gray-50">
      <Header />
      <main className="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-gray-900 mb-2">{t('pageTitle')}</h1>
          <p className="text-gray-600 mb-1">{t('pageSubtitle')}</p>
          <p className="text-sm text-gray-500">{t('mindscapeHint')}</p>
        </div>

        {/* Draw Role Card Section */}
        {!selectedScene && (
          <div className="mb-8 bg-gradient-to-r from-purple-50 to-blue-50 border-2 border-purple-200 rounded-lg p-6">
            <div className="flex items-start justify-between">
              <div className="flex-1">
                <h2 className="text-xl font-semibold text-gray-900 mb-2">{t('drawRoleCard')}</h2>
                <p className="text-sm text-gray-600 mb-4">{t('drawRoleCardDescription')}</p>
                {suggestedScene && (
                  <div className="bg-white rounded-lg p-4 border border-purple-200">
                    <div className="flex items-center mb-2">
                      <span className="text-2xl mr-2">{suggestedScene.suggested_scene?.icon || 'üéØ'}</span>
                      <div>
                        <h3 className="font-semibold text-gray-900">{t('suggestedScene')}: {suggestedScene.suggested_scene?.name}</h3>
                        <p className="text-xs text-gray-500">
                          {t('confidence')}: {Math.round(suggestedScene.confidence * 100)}% | {t('reason')}: {suggestedScene.reason}
                        </p>
                      </div>
                    </div>
                    <button
                      type="button"
                      onClick={() => {
                        const scene = WORK_SCENES.find(s => s.id === suggestedScene.suggested_scene_id);
                        if (scene) {
                          handleSceneSelect(scene);
                        }
                      }}
                      className="mt-2 px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 text-sm"
                    >
                      ‰ΩøÁî®Ê≠§Â†¥ÊôØ ‚Üí
                    </button>
                  </div>
                )}
                <button
                  type="button"
                  onClick={handleDrawRoleCard}
                  disabled={!task.trim() || drawingCard || !backendAvailable}
                  className="px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed font-medium"
                >
                  {drawingCard ? t('drawRoleCardLoading') : t('drawRoleCardButton')}
                </button>
              </div>
            </div>
          </div>
        )}

        {/* Work Scene Selection */}
        <div className="mb-8">
          <h2 className="text-lg font-semibold text-gray-900 mb-4">{t('workScenes')}</h2>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {WORK_SCENES.map((scene) => (
              <button
                key={scene.id}
                type="button"
                onClick={() => handleSceneSelect(scene)}
                className={`p-4 border-2 rounded-lg text-left transition-all ${
                  selectedScene === scene.id
                    ? 'border-blue-500 bg-blue-50'
                    : 'border-gray-200 hover:border-gray-300 hover:bg-gray-50'
                }`}
              >
                <div className="flex items-start mb-2">
                  <span className="text-2xl mr-2">{scene.icon}</span>
                  <div className="flex-1">
                    <h3 className="font-medium text-gray-900">{scene.label}</h3>
                  </div>
                </div>
                <p className="text-sm text-gray-600 mt-1">{scene.description}</p>
              </button>
            ))}
          </div>
        </div>

        {/* Backend Availability Warning */}
        {backendAvailable === false && configError && (
          <div className="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
            <div className="flex items-start">
              <div className="flex-shrink-0">
                <svg className="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fillRule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clipRule="evenodd" />
                </svg>
              </div>
              <div className="ml-3 flex-1">
                <p className="text-sm text-yellow-800">{configError}</p>
                <div className="mt-2">
                  <a
                    href="/settings"
                    className="text-sm font-medium text-yellow-800 underline hover:text-yellow-900"
                  >
                    ÂâçÂæÄ Settings ÈÖçÁΩÆ ‚Üí
                  </a>
                </div>
              </div>
            </div>
          </div>
        )}

        <form onSubmit={handleRunAgent} className="bg-white shadow rounded-lg p-6 mb-6">
          <div className="space-y-6">
            {/* Agent Type (Team Formation) */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                {t('agentType')}
              </label>
              <p className="text-xs text-gray-500 mb-3">{t('agentTypeDescription')}</p>
              <select
                value={agentType}
                onChange={(e) => setAgentType(e.target.value)}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              >
                <option value="planner">{t('teamFormationPlanner')} ‚Äì {t('teamFormationPlannerDesc')}</option>
                <option value="writer">{t('teamFormationWriter')} ‚Äì {t('teamFormationWriterDesc')}</option>
                <option value="coach">{t('teamFormationCoach')} ‚Äì {t('teamFormationCoachDesc')}</option>
                <option value="coder">{t('teamFormationCoder')} ‚Äì {t('teamFormationCoderDesc')}</option>
              </select>
            </div>

            {/* Task Description */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                {t('task')}
              </label>
              <textarea
                value={task}
                onChange={(e) => setTask(e.target.value)}
                rows={6}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder={t('taskPlaceholder')}
                required
              />
              {/* Quick Example Chips */}
              <div className="mt-2 flex flex-wrap gap-2">
                <button
                  type="button"
                  onClick={() => setTask(t('taskExample1') + ': ' + 'Help me plan this week\'s work priorities and list important tasks for each day.')}
                  className="px-3 py-1 text-xs bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >
                  {t('taskExample1')}
                </button>
                <button
                  type="button"
                  onClick={() => setTask(t('taskExample2') + ': ' + 'Help me plan the content structure for the fundraising page, including required sections, key points for each section, and overall narrative logic.')}
                  className="px-3 py-1 text-xs bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >
                  {t('taskExample2')}
                </button>
                <button
                  type="button"
                  onClick={() => setTask(t('taskExample3') + ': ' + 'Help me create a learning plan, including goal setting, learning path, practice methods, and how to track progress.')}
                  className="px-3 py-1 text-xs bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
                >
                  {t('taskExample3')}
                </button>
              </div>
            </div>

            {/* Use Mindscape */}
            <div className="border-t pt-4">
              <div className="flex items-start">
                <input
                  type="checkbox"
                  id="useMindscape"
                  checked={useMindscape}
                  onChange={(e) => setUseMindscape(e.target.checked)}
                  className="mt-1 mr-2"
                />
                <div className="flex-1">
                  <label htmlFor="useMindscape" className="text-sm font-medium text-gray-700 block">
                    {t('useMindscape')}
                  </label>
                  <p className="text-xs text-gray-500 mt-1">
                    {t('useMindscapeDescription')}
                  </p>
                </div>
              </div>
            </div>

            {/* Submit Button */}
            <div>
              <button
                type="submit"
                disabled={loading || !task.trim() || backendAvailable === false}
                className={`w-full px-4 py-2 rounded-md font-medium transition-colors ${
                  !task.trim() || backendAvailable === false
                    ? 'bg-gray-300 text-gray-500 cursor-not-allowed'
                    : 'bg-blue-600 text-white hover:bg-blue-700'
                } ${loading ? 'opacity-50' : ''}`}
              >
                {loading ? t('loading') : t('runAgent')}
              </button>
              {!task.trim() && (
                <p className="text-xs text-gray-500 text-center mt-2">
                  {t('pleaseDescribeTask')}
                </p>
              )}
              {backendAvailable === false && task.trim() && (
                <p className="text-xs text-gray-500 text-center mt-2">
                  {t('configureApiKeyFirst')}
                </p>
              )}
            </div>
          </div>
        </form>

        {/* Error Display */}
        {error && (
          <div className="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div className="flex items-start">
              <div className="flex-shrink-0">
                <svg className="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clipRule="evenodd" />
                </svg>
              </div>
              <div className="ml-3 flex-1">
                <p className="text-sm text-red-800">{error}</p>
                {(error.includes('API') || error.includes('api')) && (
                  <div className="mt-2">
                    <a
                      href="/settings"
                      className="text-sm font-medium text-red-800 underline hover:text-red-900"
                    >
                      {t('goToSettings')} ‚Üí
                    </a>
                  </div>
                )}
              </div>
            </div>
          </div>
        )}

        {/* Result Display */}
        {result && (
          <div className="bg-white shadow rounded-lg p-6">
            <h2 className="text-xl font-semibold text-gray-900 mb-4">{t('executionResult')}</h2>
            <div className="bg-gray-50 rounded-md p-4">
              <pre className="whitespace-pre-wrap text-sm text-gray-800">
                {result.output || result.error_message}
              </pre>
            </div>
            {result.metadata && (
              <div className="mt-4 text-sm text-gray-600">
                <p>{t('executionId')}: {result.execution_id}</p>
                <p>{t('status')}: {result.status}</p>
              </div>
            )}
          </div>
        )}

        {/* Suggested Playbooks */}
        {suggestedPlaybooks.length > 0 && (
          <div className="bg-white shadow rounded-lg p-6 mt-6">
            <h2 className="text-lg font-semibold text-gray-900 mb-4">{t('suggestedPlaybooks')}</h2>
            <div className="space-y-2">
              {suggestedPlaybooks.map(code => (
                <Link
                  key={code}
                  href={`/playbooks/${code}`}
                  className="block text-sm text-blue-600 hover:text-blue-800"
                >
                  ‚Üí {code}
                </Link>
              ))}
            </div>
            <p className="text-xs text-gray-500 mt-4">
              {t('playbookHelp')}
            </p>
          </div>
        )}

        <div className="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <p className="text-sm text-blue-800">
            <strong>{t('hint')}Ôºö</strong> {t('settingsHint')}
          </p>
        </div>
      </main>
    </div>
  );
}
